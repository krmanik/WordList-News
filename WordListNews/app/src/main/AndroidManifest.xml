<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.orbitgame">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordListNews">
        <activity
            android:name="io.github.orbitgame.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.WordListNews.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.orbitgame.activity.SettingsActivity"
            android:label="@string/action_settings"
            android:theme="@style/Theme.WordListNews.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>

        <activity
            android:name="io.github.orbitgame.activity.BookmarksActivity"
            android:label="@string/bookmarks"
            android:theme="@style/Theme.WordListNews.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>

        <activity
            android:name="io.github.orbitgame.activity.InfoActivity"
            android:label="@string/info"
            android:theme="@style/Theme.WordListNews.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>
</manifest>