<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/popup_top_buttons_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/popup_text_view_size_padding">

        <Button
            android:id="@+id/action_back"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_marginHorizontal="@dimen/popup_button_horizontal_margin"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:foreground="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/action_forward"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_marginHorizontal="@dimen/popup_button_horizontal_margin"
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:foreground="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/action_refresh"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_marginHorizontal="@dimen/popup_button_horizontal_margin"
            android:background="@drawable/ic_baseline_refresh_24"

            android:foreground="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/action_bookmark"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_marginHorizontal="@dimen/popup_button_horizontal_margin"
            android:background="@drawable/ic_baseline_bookmark_border_24"

            android:foreground="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/action_open_in_browser"
            android:layout_width="@dimen/popup_button_size"
            android:layout_height="@dimen/popup_button_size"
            android:layout_marginHorizontal="@dimen/popup_button_horizontal_margin"
            android:background="@drawable/ic_outline_open_in_new_24"

            android:foreground="?android:attr/selectableItemBackground" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/popup_button_size"
                android:layout_height="@dimen/popup_button_size"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:background="@drawable/ic_outline_home_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/popup_text_view_size_padding"
                android:text="@string/home"

                android:textSize="@dimen/popup_text_view_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/popup_button_size"
                android:layout_height="@dimen/popup_button_size"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:background="@drawable/ic_outline_settings_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/popup_text_view_size_padding"
                android:text="@string/settings"

                android:textSize="@dimen/popup_text_view_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookmark_button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/popup_button_size"
                android:layout_height="@dimen/popup_button_size"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:background="@drawable/ic_outline_bookmarks_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/popup_text_view_size_padding"
                android:text="@string/bookmarks"

                android:textSize="@dimen/popup_text_view_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/help_button_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/popup_button_size"
                android:layout_height="@dimen/popup_button_size"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_outline_info_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/popup_text_view_size_padding"
                android:text="@string/info"
                android:textSize="@dimen/popup_text_view_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>