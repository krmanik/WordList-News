<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordListNews" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_darkest</item>
        <item name="colorPrimaryVariant">@color/gray_darkest</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_darkest</item>
        <item name="colorSecondaryVariant">@color/gray_darkest</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WordListNews.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WordListNews.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.WordListNews.PopupOverlay" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>